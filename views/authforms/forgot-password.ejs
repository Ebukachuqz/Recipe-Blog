<div class="row align-items-center justify-content-center my-5">
			<div class="col-lg-5 col-md-8 py-8 py-xl-0 my-4">
				<!-- Card -->
				<div class="card shadow">
					<!-- Card body -->
					<div class="card-body p-6">
						<div class="mb-4">
							<h1 class="mb-1 fw-bold">Forgot Password</h1>
							<p>Enter Your Email Address to recieve a link for your password reset</p>
						</div>
                        <%- include('../partials/flash-msg.ejs') %>
							<!-- Form -->
						<form action="/forgot-password" method="post">
								<!-- Email -->
							<div class="mb-3">
								<label for="email" class="form-label">Email</label>
								<input type="email" id="email" class="form-control" name="email" placeholder="Enter Your Email " required>
							</div>
								<!-- Button -->
							<div class="mb-3 d-grid">
								<button type="submit" class="btn btn-primary">
									Send Resest Link
								</button>
							</div>
							<span>Return to <a href="/login">Sign In</a></span>
						</form>
					</div>
				</div>
			</div>
		</div>